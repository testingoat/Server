    <script>
        // Theme toggle
        function toggleTheme() {
            document.body.classList.toggle('dark-mode');
            const btn = document.querySelector('.theme-toggle');
            btn.textContent = document.body.classList.contains('dark-mode') ? '‚òÄÔ∏è Light Mode' : 'üåô Dark Mode';
            localStorage.setItem('theme', document.body.classList.contains('dark-mode') ? 'dark' : 'light');
        }

        // Load saved theme
        if (localStorage.getItem('theme') === 'dark') {
            toggleTheme();
        }

        // Handle target audience change
        function handleTargetChange() {
            const target = document.getElementById('target').value;
            const specificGroup = document.getElementById('specificTargetGroup');
            const specificLabel = document.getElementById('specificTargetLabel');

            if (target.startsWith('specific-')) {
                specificGroup.style.display = 'block';
                if (target === 'specific-token') {
                    specificLabel.textContent = 'Enter FCM Token';
                    document.getElementById('specificTarget').placeholder = 'Enter FCM token';
                } else if (target === 'specific-customer') {
                    specificLabel.textContent = 'Enter Customer Email';
                    document.getElementById('specificTarget').placeholder = 'Enter customer email';
                } else if (target === 'specific-seller') {
                    specificLabel.textContent = 'Enter Seller Email';
                    document.getElementById('specificTarget').placeholder = 'Enter seller email';
                } else if (target === 'specific-delivery') {
                    specificLabel.textContent = 'Enter Delivery Agent Email';
                    document.getElementById('specificTarget').placeholder = 'Enter delivery agent email';
                }
            } else {
                specificGroup.style.display = 'none';
            }
        }

        // Copy token to clipboard
        function copyToken(token) {
            navigator.clipboard.writeText(token).then(() => {
                alert('‚úÖ Token copied to clipboard!');
            }).catch(err => {
                alert('‚ùå Failed to copy token');
            });
        }

        // Delete token
        async function deleteToken(tokenId, email) {
            if (!confirm(`Are you sure you want to delete the FCM token for ${email || 'this user'}?`)) {
                return;
            }

            try {
                const response = await fetch(`/admin/fcm-management/api/tokens/${tokenId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();

                if (result.success) {
                    alert('‚úÖ Token deleted successfully!');
                    loadTokens();
                    loadStats();
                } else {
                    alert('‚ùå Failed to delete token: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                alert('‚ùå Error deleting token: ' + error.message);
            }
        }

        // Load statistics
        async function loadStats() {
            try {
                const response = await fetch('/admin/fcm-management/api/stats');
                const data = await response.json();

                console.log('üìä Stats loaded:', data);

                // Update stats with actual data from the correct path
                const stats = data.stats || data.data || {};
                const tokens = stats.tokens || {};
                const overview = stats.overview || {};

                document.getElementById('totalTokens').textContent = tokens.total || overview.totalTokens || 0;
                document.getElementById('activeSellers').textContent = overview.totalSellers || 0;
                document.getElementById('activeCustomers').textContent = overview.totalCustomers || 0;
                document.getElementById('deliveryAgents').textContent = overview.totalDeliveryAgents || 0;
            } catch (error) {
                console.error('‚ùå Error loading stats:', error);
            }
        }

        // Load tokens
        async function loadTokens() {
            try {
                const response = await fetch('/admin/fcm-management/api/tokens');
                const data = await response.json();

                console.log('üì± Tokens loaded:', data);

                document.getElementById('tokensLoading').style.display = 'none';

                const tokens = data.data?.tokens || data.tokens || [];

                if (tokens.length > 0) {
                    document.getElementById('tokensTable').style.display = 'block';
                    const tbody = document.getElementById('tokensBody');
                    tbody.innerHTML = tokens.map(token => {
                        const tokenStr = token.fcmToken || token.token || 'N/A';
                        const shortToken = tokenStr.length > 20 ? tokenStr.substring(0, 20) + '...' : tokenStr;
                        const email = token.email || token.userId?.email || 'N/A';
                        const userType = token.userType || token.type || 'N/A';
                        const platform = token.platform || 'android';
                        const createdAt = token.createdAt || token.registeredAt || new Date();
                        const tokenId = token._id || token.id;

                        return `
                        <tr>
                            <td>${email}</td>
                            <td>${userType}</td>
                            <td>
                                <span style="font-family: monospace; font-size: 12px;">${shortToken}</span>
                            </td>
                            <td>${platform}</td>
                            <td><span class="badge badge-success">Active</span></td>
                            <td>${new Date(createdAt).toLocaleDateString()}</td>
                            <td>
                                <button class="btn btn-primary" style="padding: 6px 12px; font-size: 12px; margin-right: 5px;" onclick="copyToken('${tokenStr}')">üìã Copy</button>
                                <button class="btn btn-secondary" style="padding: 6px 12px; font-size: 12px; background: #ef4444; color: white;" onclick="deleteToken('${tokenId}', '${email}')">üóëÔ∏è Delete</button>
                            </td>
                        </tr>
                    `;
                    }).join('');
                } else {
                    document.getElementById('tokensEmpty').style.display = 'block';
                }
            } catch (error) {
                console.error('‚ùå Error loading tokens:', error);
                document.getElementById('tokensLoading').textContent = 'Error loading tokens';
            }
        }

        // Load history
        async function loadHistory() {
            try {
                const response = await fetch('/admin/fcm-management/api/history');
                const data = await response.json();
                
                document.getElementById('historyLoading').style.display = 'none';
                
                if (data.notifications && data.notifications.length > 0) {
                    document.getElementById('historyTable').style.display = 'block';
                    const tbody = document.getElementById('historyBody');
                    tbody.innerHTML = data.notifications.map(notif => `
                        <tr>
                            <td>${notif.title}</td>
                            <td>${notif.message}</td>
                            <td>${notif.target}</td>
                            <td><span class="badge badge-${notif.status === 'sent' ? 'success' : 'warning'}">${notif.status}</span></td>
                            <td>${new Date(notif.createdAt).toLocaleDateString()}</td>
                        </tr>
                    `).join('');
                } else {
                    document.getElementById('historyEmpty').style.display = 'block';
                }
            } catch (error) {
                console.error('Error loading history:', error);
                document.getElementById('historyLoading').textContent = 'Error loading history';
            }
        }

        // Send notification
        document.getElementById('notificationForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const target = document.getElementById('target').value;
            const formData = {
                title: document.getElementById('title').value,
                message: document.getElementById('message').value,
                target: target
            };

            // Add specific target if selected
            if (target.startsWith('specific-')) {
                const specificValue = document.getElementById('specificTarget').value;
                if (!specificValue) {
                    alert('‚ùå Please enter the email or token for specific targeting');
                    return;
                }
                formData.specificTarget = specificValue;
            }

            try {
                const response = await fetch('/admin/fcm-management/api/send', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    alert('‚úÖ Notification sent successfully!');
                    document.getElementById('notificationForm').reset();
                    document.getElementById('specificTargetGroup').style.display = 'none';
                    loadHistory();
                    loadStats();
                } else {
                    alert('‚ùå Failed to send notification: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                alert('‚ùå Error sending notification: ' + error.message);
            }
        });

        // Load data on page load
        loadStats();
        loadTokens();
        loadHistory();
    </script>
</body>
</html>

