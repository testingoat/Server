    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>
                <span>üîî</span>
                <span>FCM Management Dashboard</span>
            </h1>
            <button class="theme-toggle" onclick="toggleTheme()">üåô Dark Mode</button>
        </div>

        <!-- Navigation -->
        <div class="nav-bar">
            <a href="/admin" class="nav-item">üìä Admin Panel</a>
            <a href="/admin/resources/Seller" class="nav-item">üè™ Sellers</a>
            <a href="/admin/resources/Customer" class="nav-item">üë• Customers</a>
            <a href="/admin/resources/DeliveryPartner" class="nav-item">üö¥ Delivery</a>
            <a href="#" class="nav-item">‚öôÔ∏è Settings</a>
        </div>

        <!-- Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">Total Tokens</div>
                <div class="stat-value" id="totalTokens">-</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Active Sellers</div>
                <div class="stat-value" id="activeSellers">-</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Active Customers</div>
                <div class="stat-value" id="activeCustomers">-</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Delivery Agents</div>
                <div class="stat-value" id="deliveryAgents">-</div>
            </div>
        </div>

        <!-- Send Notification Form -->
        <div class="card">
            <h2>üì§ Send Notification</h2>
            <form id="notificationForm">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" id="title" placeholder="Enter notification title" required>
                </div>
                <div class="form-group">
                    <label>Message</label>
                    <textarea id="message" rows="4" placeholder="Enter your message" required></textarea>
                </div>
                <div class="form-group">
                    <label>Target Audience</label>
                    <select id="target" onchange="handleTargetChange()">
                        <option value="all">üåê All Users</option>
                        <option value="customers">üë• All Customers</option>
                        <option value="sellers">üè™ All Sellers</option>
                        <option value="delivery">üö¥ All Delivery Partners</option>
                        <option value="specific-customer">üë§ Specific Customer</option>
                        <option value="specific-seller">üè™ Specific Seller</option>
                        <option value="specific-delivery">üö¥ Specific Delivery Agent</option>
                        <option value="specific-token">üéØ Specific Token</option>
                    </select>
                </div>
                <div class="form-group" id="specificTargetGroup" style="display:none;">
                    <label id="specificTargetLabel">Enter Email/Token</label>
                    <input type="text" id="specificTarget" placeholder="Enter email or token">
                </div>
                <button type="submit" class="btn btn-primary">Send Notification</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </form>
        </div>

        <!-- Registered Tokens -->
        <div class="card">
            <h2>üì± Registered FCM Tokens</h2>
            <div id="tokensLoading" class="loading">Loading tokens...</div>
            <div id="tokensTable" style="display:none;">
                <table>
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Type</th>
