                    <tbody id="tokensBody"></tbody>
                </table>
            </div>
            <div id="tokensEmpty" style="display:none;" class="empty-state">
                <div class="empty-state-icon">üì≠</div>
                <div>No FCM tokens registered yet</div>
            </div>
        </div>

        <!-- Notification History -->
        <div class="card">
            <h2>üìú Notification History</h2>
            <div id="historyLoading" class="loading">Loading history...</div>
            <div id="historyTable" style="display:none;">
                <table>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Message</th>
                            <th>Target</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody id="historyBody"></tbody>
                </table>
            </div>
            <div id="historyEmpty" style="display:none;" class="empty-state">
                <div class="empty-state-icon">üì≠</div>
                <div>No notifications sent yet</div>
            </div>
